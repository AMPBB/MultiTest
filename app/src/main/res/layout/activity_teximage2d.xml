<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTexImage2D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_dark_background">
        <LinearLayout
            android:id="@+id/tex_image_2d_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="glteximage2d"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/button_test_tex_image2d_on_screen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="test glTexImage2D onscreen........"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="width"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textfield_teximage2d_onscreen_width"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="width"
                    android:text="512"
                    android:maxLength="6"
                    android:inputType="numberDecimal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="height"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textfield_teximage2d_onscreen_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="height"
                    android:text="1024"
                    android:maxLength="6"
                    android:inputType="numberDecimal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="glsurfaceview_cnt"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textfield_teximage2d_onscreen_glsurfaceview_cnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="glsurfaceview_cnt"
                    android:text="32"
                    android:maxLength="4"
                    android:inputType="numberDecimal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="column"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textfield_teximage2d_onscreen_column"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="glsurfaceview_cnt"
                    android:text="16"
                    android:maxLength="4"
                    android:inputType="numberDecimal"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>